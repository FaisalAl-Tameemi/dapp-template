{
  "name": "typescript-api",
  "version": "1.0.0",
  "main": "index.js",
  "author": "Faisal A. <faisal.al.tameemi@gmail.com>",
  "license": "MIT",
  "scripts": {
    "build": "rimraf dist && tsc",
    "start": "node dist/index.js",
    "dev": "export NODE_ENV=development; ./node_modules/nodemon/bin/nodemon.js --exec ts-node src/api/index.ts --watch src",
    "test": "export NODE_ENV=testing; ./node_modules/jest/bin/jest.js --watch",
    "coverage": "jest --coverage",
    "db:rollback": "npm run build && npx sequelize-cli db:migrate:undo:all --options-path ./.sequelizerc-dist",
    "db:migrate": "npm run build && npx sequelize-cli db:migrate --options-path ./.sequelizerc-dist",
    "db:seed": "npm run build && npx sequelize-cli db:seed:all --options-path ./.sequelizerc-dist",
    "db:reset": "npm run db:rollback && npm run db:migrate && npm run db:seed"
  },
  "devDependencies": {
    "@types/express": "^4.17.0",
    "@types/jest": "^25.1.4",
    "@types/node": "^13.9.5",
    "babel-core": "^6.26.3",
    "babel-plugin-add-module-exports": "^1.0.2",
    "babel-preset-env": "^1.7.0",
    "babel-register": "^6.26.0",
    "jest": "^25.2.3",
    "nodemon": "^2.0.2",
    "rimraf": "^3.0.2",
    "socket.io-client": "^2.2.0",
    "ts-jest": "^25.2.1",
    "ts-node": "^8.3.0",
    "typescript": "^3.5.3"
  },
  "dependencies": {
    "@nomiclabs/hardhat-ethers": "^2.0.2",
    "@nomiclabs/hardhat-waffle": "^2.0.1",
    "@typechain/ethers-v5": "^7.1.0",
    "@typechain/hardhat": "^2.3.0",
    "@types/bcrypt": "^3.0.0",
    "@types/bluebird": "^3.5.27",
    "@types/boom": "^7.3.0",
    "@types/express-jwt": "^0.0.42",
    "@types/jsonwebtoken": "^8.3.3",
    "@types/lodash": "^4.14.136",
    "@types/socket.io": "^2.1.2",
    "@types/validator": "^12.0.1",
    "aes-js": "^3.1.2",
    "bcrypt": "^5.0.0",
    "body-parser": "^1.19.0",
    "boom": "^7.3.0",
    "ethereum-waffle": "^3.4.0",
    "ethers": "^5.4.6",
    "express": "^4.17.1",
    "express-jwt": "^6.0.0",
    "hardhat": "^2.6.4",
    "lodash": "^4.17.21",
    "mongoose": "^5.6.9",
    "node-rsa": "^1.0.8",
    "pg": "^8.7.1",
    "pg-hstore": "^2.3.4",
    "randomstring": "^1.1.5",
    "sequelize": "^5.21.2",
    "socket.io": "^2.4.0",
    "typechain": "^5.1.2",
    "typegoose": "^5.9.0",
    "uuid": "^7.0.2",
    "winston": "^3.2.1",
    "yenv": "^2.1.0"
  }
}
